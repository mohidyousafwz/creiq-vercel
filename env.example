# CREIQ Environment Configuration
# Copy this file to .env and update with your values

# Required: ARB Website URL
URL=https://your-arb-website.com

# Optional: Browser Settings
HEADLESS=false                    # Run browser in headless mode (true/false)
BROWSER_TIMEOUT=60000            # Browser navigation timeout in milliseconds

# Optional: Processing Settings
MAX_RETRIES=3                    # Maximum retry attempts for failed operations
RETRY_DELAY=5                    # Delay between retries in seconds

# Optional: Output Settings
RESULTS_DIR=data/results         # Directory for saving results
SAVE_HTML=true                   # Save HTML content (true/false)
SAVE_SCREENSHOTS=false           # Take screenshots (true/false)

# Optional: Logging
LOG_LEVEL=INFO                   # Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE=creiq.log              # Log file path (optional, logs to console if not set)

# Optional: API Settings
API_HOST=0.0.0.0                # API host address
API_PORT=8000                   # API port number
API_RELOAD=false                # Auto-reload on code changes (development only) 